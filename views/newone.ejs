<% layout('layout/boilerplate') %>

<div class="container">
  <div class="row mt-3 d-flex justify-content-center">
    <div class="col-lg-6">
      <div class="pl-0">
        <h4 class="text-primary pl-0 pr-2 py-1">Add your school information</h4>
      </div>
      <hr>
      <form action="/news" method="POST" enctype="multipart/form-data">

        <div class="row">
          <div class="col-lg-6">
            <label for="schoolsname">Schoolsname</label>
          </div>
          <div class="col-lg-6">
            <input class="form-control" style="height:30px" type="text" name="schoolsname" id="schoolsname"/>
          </div>
        </div>

        <div class="row rounded" style="background: rgb(244, 240, 252);">
          <div class="col-lg-6">
            <label class="form-label" for="gender">Gender of students</label>
          </div>
          <div class="col-lg-6">
             <select name="gender" id="gender" class="pb-1 pt-0 form-control" style="height:30px">
              <option>Student's gender</option>
              <option value="boys">Boys</option>
              <option value="girls">Girlsr</option>
              <option value="mixed">Mixed</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
             <label for="numberOfStudents">Number of Students</label>
          </div>
          <div class="col-lg-6">
            <input class="form-control" style="height:30px" type="number" name="numberOfStudents" id="numberOfStudents" />
          </div>
        </div>

        <div class="row" style="background: rgb(244, 240, 252);">
          <div class="col-lg-6">
             <label for="averageMonthlyIncomPerPerson">Average Parents Income</label>
          </div>
          <div class="col-lg-6">
            <input class="form-control" style="height:30px"
              type="number"
              name="averageMonthlyIncomPerPerson"
              id="averageMonthlyIncomPerPerson"
            />
          </div>
        </div>
       
        <div class="row">
          <div class="col-lg-6">
            <label for="location">Location</label>
          </div>
          <div class="col-lg-6">
            <input class="form-control" style="height:30px" type="text" name="location" id="location" />
          </div>
        </div>

        <div class="row" style="background: rgb(244, 240, 252);">
          <div class="col-lg-6">
            <label for="provience">Provience</label>
          </div>
          <div class="col-lg-6">
            <input class="form-control" style="height:30px" type="text" name="provience" id="provience" />
          </div>
        </div>

        
       


        <label for="city">City</label> <br />
        <input type="text" name="city" id="city" />

        <label for="district">district</label> <br />
        <input type="text" name="district" id="district" />

        <label for="village">Village</label> <br />
        <input type="text" name="village" id="village" />

        <label for="Street">Street</label> <br />
        <input type="text" name="Street" id="Street" />

        <label for="line">Line</label>
        <input type="text" name="line" id="line" />

        <label for="number">Number</label>
        <input type="text" name="number" id="number" />

        <label for="postCode">Post Code</label> <br />
        <input type="text" name="postCode" id="postCode" />

        <label for="mobileNumber">Mobile Number</label>
        <input type="number" name="mobileNumber" id="mobileNumber" />

        <input type="file" name="image" id="image" />

        <button class="btn btn-primary" type="submit">Create</button>
      </form>
    </div>
  </div>
</div>
