<% layout('layout/boilerplate') %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-6">
      <ul class="list-group">
        <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
              Schools name: 
            </div>
            <div class="col-6">
              <%= school.schoolsname %> 
            </div>
          </div>
        </li>
        <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
              Number Of Poor People: 
            </div>
            <div class="col-6">
              <%= school.numberOfStudents %> 
            </div>
          </div>
        </li>
        <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
              Gender of students : 
            </div>
            <div class="col-6">
              <%= school.gender %> 
            </div>
          </div>
        </li>

        <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
              Average Monthly Incom: 
            </div>
            <div class="col-6">
               <%= school.averageMonthlyIncomPerPerson %>
            </div>
          </div>
        </li>
     </li>
        <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
             provience:
            </div>
            <div class="col-6">
             <%= school.provience %>      
                  </div>
          </div>

        </li>

         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
           City:   
            </div>
            <div class="col-6">
              <%= school.city %>      
                  </div>
          </div>
        </li>

           <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
           district:   
            </div>
            <div class="col-6">
              <%= school.district %>      
                  </div>
          </div>
        </li>

         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
           Village:    
            </div>
            <div class="col-6">
              <%= school.village %>     
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
           Street:   
            </div>
            <div class="col-6">
               <%= school.Street %>     
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
          number:  
            </div>
            <div class="col-6">
               <%= school.number %>     
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
          postCode: 
            </div>
            <div class="col-6">
               <%= school.postCode %>    
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
         Mobile Number:
            </div>
            <div class="col-6">
               <%= school.mobileNumber %>   
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
         Location:
            </div>
            <div class="col-6">
                 <%= school.location %> 
                  </div>
          </div>
        </li>
         <li class="list-group-item py-1"> 
          <div class="row">
            <div class="col-6 text-primary">
         Registered By:
            </div>
            <div class="col-6">
                 <a href="http:/users/<%= school.creator.id %>"> <%=school.creator.username %> </a> 
                  </div>
          </div>
        </li>

    <div class="col-lg-6">
      <div class="school-image border rounded">
        <img class="rounded" src=<%=school.image %> alt="School Image" width="100%"> 
      </div>
           <% if(currentUser && currentUser.username ==school.creator.username ) { %> 
        <form action="/schoolimagedelete/<%= school._id%>" method="get">
          <button class="btn btn-danger" type="submit">Delete image</button>
        </form>
      <% } %>
    </div>
  </div>
  <hr/>

  <div class="row">
    <div class="col-lg-12">
      
      <h3>Friendship</h3>
      <% if(currentUser && currentUser.username==school.creator.username) {%>
        <% for (let f of friendships.reverse()){ %> 
          By : <a href="/users/<%=f.friendrequesterid %>/<%=currentUser.id%>/school">  <%=f.friendshipRequestersSchoolsName  %></a> </h3>
            <%if(f.confirmation!="Yes") { %>  
              <a href="http:/friendshipconfirm/<%= f.id  %>/<%= school.id %> ">Confirm</a> <br>    
            <% } else{%> 
          <h2>Confirmed</h2>
        <% } %> 
        <% } %> 
      <% } %> 

      <% if(!currentUser || currentUser.username !=school.creator.username ) { %> 
        <a href="http:/users/<%= school.creator.id %>"> Creator</a><br/><br/>
      <% } else {%> 
        <a href="http:/news/<%=school.id %>/edit ">Edit your school Information</a> <br><br>
        <form action="/deleteconfirm/<%=school._id %>" method="get">
          <button class="btn btn-danger" type="submit">Delete Your School</button>
        </form>
      <% } %> 
